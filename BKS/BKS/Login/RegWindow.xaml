<Window x:Class="BKS.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BKS"
        mc:Ignorable="d"
        Title="RegWindow" 
        Height="700"
        Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#C48D60"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock  Text="BKS"
                   Grid.Column="1"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2C599D"
                   />
        <Image Source="/rec/Гайка.png" Width="60" Height="60" VerticalAlignment="Center" Grid.Row="1" HorizontalAlignment="Center"/>

        <TextBlock  Text="Регистрация"
                    Grid.Row="2"
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Foreground="#2C599D"
                    FontWeight="Medium"
                    />
        <Button x:Name="BtnCloseRegWindow"
                Style="{StaticResource CloseMinimazeButton}"
                Click="BtnCloseRegWindow_Click"
                Cursor="Hand"
                Grid.Column="2"
                Grid.Row="0" 
                Width="20" 
                Height="20" 
                BorderThickness="0" 
                Background="Transparent"
                Content="X" 
                FontWeight="Bold"
                VerticalAlignment="Center" 
                HorizontalAlignment="Right">
        </Button>
        <Button x:Name="CollapseBtnRegWindow"
               Click="CollapseBtnRegWindow_Click"
                Content="-" 
                BorderThickness="0"
                Background="Transparent" 
                Style="{StaticResource CloseMinimazeButton}"
                Grid.Column="2"
                Grid.Row="0" 
                Margin="0,-2,20,5" 
                Width="20"
                Height="28" 
                FontSize="24"
                VerticalAlignment="Center" 
                HorizontalAlignment="Right" 
                FontWeight="Bold" >
        </Button>
        <StackPanel Grid.Row="2" 
                    Width="350"
                    Height="500">
            <TextBlock  Text="Имя"
                        Margin="52,0,0,0"
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="16"
                        Foreground="#2C599D">
            </TextBlock>
            <TextBox x:Name="FirstName" 
                     Height="35" 
                     Width="250" 
                     VerticalContentAlignment="Center" 
                     HorizontalAlignment="Center"
                     Padding="5" TextChanged="FirstName_TextChanged"
                     >
                <TextBox.Resources>
                    <Style TargetType="Border" >
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock  Text="Фамилия"
                        Margin="52,20,0,0"
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="16"
                        Foreground="#2C599D">
            </TextBlock>
            <TextBox x:Name="LastName" 
                     Height="35" 
                     Width="250" 
                     VerticalContentAlignment="Center" 
                     HorizontalAlignment="Center"
                     Padding="5" TextChanged="LastName_TextChanged"
                     >
                <TextBox.Resources>
                    <Style TargetType="Border" >
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock  Text="Отчество"
                        Margin="52,20,0,0"
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="16"
                        Foreground="#2C599D"
                        >
            </TextBlock>
            <TextBox x:Name="Patronymic" 
                     Height="35" 
                     Width="250" 
                     VerticalContentAlignment="Center"
                     Padding="5" TextChanged="Patronymic_TextChanged"
                     >
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}" >
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock  Text="Почта"
                        Margin="52,20,0,0"
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="16"
                        Foreground="#2C599D"
                        >
            </TextBlock>
            <TextBox x:Name="Email" 
                     Height="35" 
                     Width="250" 
                     VerticalContentAlignment="Center" 
                     HorizontalAlignment="Center"
                     Padding="5" TextChanged="Email_TextChanged"
                     >
                <TextBox.Resources>
                    <Style TargetType="Border" >
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock  Text="Телефон"
                        Margin="52,20,0,0"
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="16"
                        Foreground="#2C599D"
                        >
            </TextBlock>
            <TextBox x:Name="Phone" 
                     Height="35" 
                     Width="250" 
                     VerticalContentAlignment="Center" 
                     HorizontalAlignment="Center"
                     Padding="5" TextChanged="Phone_TextChanged"
                     >
                <TextBox.Resources>
                    <Style TargetType="Border" >
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Button x:Name="Btn_RegRegWindow"
                    Click="Btn_RegRegWindow_Click"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,20,0,0"
                    Content="Зарегистрироваться!"
                    >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
